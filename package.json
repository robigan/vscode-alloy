{
    "name": "alloy",
    "displayName": "Alloy",
    "description": "Alloy configuration language support",
    "version": "0.2.0-alpha.3",
    "author": "robigan",
    "publisher": "robigan",
    "repository": {
      "type": "git",
      "url": "https://github.com/robigan/vscode-alloy"
    },
    "engines": {
        "vscode": "^1.69.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "alloy",
                "aliases": [
                    "Alloy",
                    "alloy"
                ],
                "extensions": [
                    ".alloy",
                    ".aly"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alloy",
                "scopeName": "source.alloy",
                "path": "./syntaxes/alloy.tmLanguage.json"
            }
        ]
    }
}
